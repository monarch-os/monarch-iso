#!/bin/bash

if [ $# -eq 0 ]; then
  echo "Usage: monarch-iso-upload [release/monarch.iso]"
  exit 1
fi

if [[ ! -f ~/.config/rclone/rclone.conf ]]; then
  echo "You must first configure rclone with the R2 credentials: monarch-iso-rclone-config"
  exit 1
fi

rclone copy $1 Monarch:monarch/ -P

if [[ -f $1.sig ]]; then
  rclone copy $1.sig Monarch:monarch/ -P
fi
